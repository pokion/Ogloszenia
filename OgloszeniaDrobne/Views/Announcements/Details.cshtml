@model OgloszeniaDrobne.Models.Announcement

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col"> 
        <h1>@Model.Title</h1> 
    </div>
    <div class="col">
        <h1><a asp-area="" asp-controller="ReportedAnnoucments" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-danger">Zgłoś</a></h1>
    </div>
</div>
<div class="row">
    <div class="col">
        @Html.Raw(Model.Description)
    </div>
</div>
<div class="row">
    <div class="col">
        <small class="text-body-secondary">Data dodania: @Model.CreateDate</small>
    </div>
</div>

